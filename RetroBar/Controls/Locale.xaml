<UserControl x:Class="RetroBar.Controls.Locale"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded"
             Template="{DynamicResource LocaleTemplateKey}">
    <UserControl.ToolTip>
        <TextBlock Text="{Binding Path=LocaleIdentifier, Mode=OneWay}"
                   Name="LocaleTip" />
    </UserControl.ToolTip>
</UserControl>
